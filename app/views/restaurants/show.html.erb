<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p><br/>
<p><%= @restaurant.category %></p><br/>
<p><%= @restaurant.phone_number %></p><br/>
<p>Reviews:</p><br/>
<% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
  <% end %>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back to list', restaurants_path %>
